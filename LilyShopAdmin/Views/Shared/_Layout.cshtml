<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>LILY SHOP</title>
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="/assets/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="/assets/css/fontawesome.css" rel="stylesheet" />
    <link href="/assets/css/jquery-ui.css" rel="stylesheet" />
    <link href="/assets/css/owl.carousel.css" rel="stylesheet" />
    <link href="/assets/css/owl.theme.default.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar">
        <div class="row navbar-top">
            <div class="col-1 left-icon">
                <button class="menu-button" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling">
                    <i class="bi bi-list"></i>
                </button>
                <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling">
                    <div class="offcanvas-header">
                        <div class="row sidebar-header">
                            <div class="col-4 sidebar-menu">
                                <button class="menu-button">
                                    <i class="bi bi-list"></i>
                                </button>
                            </div>
                            <div class="col-6 sidebar-logo">
                                <div class="navbar-logo">
                                    <a asp-route="AdminHome">
                                        <img src="/assets/images/logo.png" />
                                    </a>
                                </div>
                            </div>
                            <div class="col-2 button-close">
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                            </div>
                        </div>
                    </div>
                    <div class="offcanvas-body">
                        <div class="menu-list">
                            <a asp-route="AdminHome">
                                <i class="bi bi-house-heart"></i>
                                <label>Trang chủ</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-person-lines-fill"></i>
                                <label>Quản lý tài khoản</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-basket3"></i>
                                <label>Quản lý sản phẩm</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-newspaper"></i>
                                <label>Quản lý tin tức</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-file-earmark-person"></i>
                                <label>Quản lý khách hàng</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-envelope-paper"></i>
                                <label>Liên hệ</label>
                            </a>
                        </div>
                        <div class="menu-list">
                            <a href="#">
                                <i class="bi bi-question-circle"></i>
                                <label>Trợ giúp</label>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-7 left-logo">
                <div class="navbar-logo">
                    <a asp-route="AdminHome">
                        <img src="/assets/images/logo.png" />
                    </a>
                </div>
            </div>
            <div class="col-4 right">
                <div class="mail">
                    <a href="#">
                        <i class="bi bi-envelope-heart"></i>
                    </a>
                </div>
                <div class="avatar">
                    <a class="avatar-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
                        <img src="@Context.Session.GetString("Avatar")" />
                    </a>
                    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight">
                        <div class="offcanvas-header">
                            <div class="avatar-title">
                                <img src="@Context.Session.GetString("Avatar")" />
                            </div>
                            <span>@Context.Session.GetString("Username")</span>
                        </div>
                        <div class="offcanvas-body">
                            <div class="content">
                                <a href="#">
                                    <i class="bi bi-key"></i>
                                    <label>Đổi mật khẩu</label>
                                </a>
                            </div>
                            <div class="content">
                                <a asp-route="AdminLogout">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <label>Thoát</label>
                                </a>
                            </div>
                            <div class="content">
                                <a href="#">
                                    <i class="bi bi-plus"></i>
                                    <label>Add</label>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            <div class="row footer-top">
                <div class="col-4 item">
                    <ul>
                        <li><h2>THÔNG TIN</h2></li>
                        <li><a href="#">Cửa hàng thời trang nữ LilyShop</a></li>
                        <li><a href="#">Đường D1 - Thuận An - Thuận Giao - Bình Dương</a></li>
                    </ul>
                </div>
                <div class="col-4 item">
                    <ul>
                        <li><h2>LIÊN HỆ</h2></li>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Trợ giúp</a></li>
                    </ul>
                </div>
                <div class="col-4 item">
                    <ul>
                        <li><h2>HỖ TRỢ KHÁCH HÀNG</h2></li>
                        <li><a href="#">Hỏi đáp</a></li>
                        <li><a href="#">Hướng dẫn mua hàng</a> </li>
                        <li> <a href="#">Đăng ký tài khoản</a></li>
                        <li><a href="#">Chính sách giao hàng</a></li>
                        <li><a href="#">Chính sách đổi trả hoàn tiền</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <ul>
                    <li>
                        <a href="#">
                            <i class="bi bi-facebook"></i>
                            <label>FACEBOOK</label>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-instagram"></i>
                            <label>INSTAGRAM</label>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-messenger"></i>
                            <label>MESSENGER</label>
                        </a>
                    </li>
                </ul>
                <span>Copyright &copy; 2022 LilyShop</span>
            </div>
        </div>
    </footer>
    <section>
        <script src="/assets/scripts/bootstrap.bundle.js"></script>
        <script src="/assets/scripts/jquery-3.6.1.js"></script>
        <script src="/assets/scripts/popper.js"></script>
        <script src="/assets/scripts/bootstrap.js"></script>
        <script src="/assets/scripts/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="/assets/scripts/jquery.nicescroll.js"></script>
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="/assets/scripts/script.js"></script>
    </section>
</body>
</html>
